# ============================================
# Configuração do Banco de Dados (Supabase)
# ============================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:your_password@aws-0-sa-east-1.pooler.supabase.com:6543/postgres

# ============================================
# JWT Secret Key (Gerar com: python -c "import secrets; print(secrets.token_urlsafe(32))")
# ============================================
JWT_SECRET=your-secret-key-here-change-in-production

# ============================================
# Ambiente e Logging
# ============================================
ENVIRONMENT=production
LOG_LEVEL=info
DEBUG=false
PORT=8000

# ============================================
# URLs de Serviços Externos
# ============================================
ML_SERVICE_URL=https://seu-ml-service.onrender.com/classify
LLM_SERVICE_URL=https://seu-llm-service.onrender.com/generate-actions

# ============================================
# CORS Configuration
# ============================================
# Adicione os domínios permitidos separados por vírgula
CORS_ORIGINS=https://conecta-saude-frontend.onrender.com,http://localhost:3000,http://localhost:5173

# ============================================
# Email Configuration (Opcional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-app

# ============================================
# Supabase Additional (Se usar direto pelo Supabase SDK)
# ============================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here
